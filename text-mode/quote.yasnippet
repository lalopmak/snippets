# --# -*- mode: snippet -*-
# name: [quote=..] ... [/quote]
# key: quote
# group: bbcode
# --
[quote${1:$$(if (and yas-moving-away-p 
                     (equal "=" text)) 
                (let ((field (overlay-get yas--active-field-overlay 'yas--field)))
                     (progn (yas--skip-and-clear field)
                            (yas-next-field 1)))
                (unless (eq ?= (string-to-char text)) 
                        (concat "=" text)))}]${2:quoted text}[/quote]$0